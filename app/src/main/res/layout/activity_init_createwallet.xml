<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/col_black">

        <TableRow
            android:id="@+id/tr_create"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="20dp"
                android:text="@string/txt_createNewWallet"
                android:textColor="@color/bottomtab_normal"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="100dp"
                android:text="》"
                android:textColor="@color/bottomtab_normal"
                android:textSize="20dp" />

        </TableRow>

        <!--border lines for rows-->
        <View
            android:layout_height="0.5dip"
            android:layout_marginTop="20sp"
            android:background="@color/dark_gray" />

        <TableRow
            android:id="@+id/tr_recovera"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="20dp"
                android:text="@string/txt_recoverMyOldWallet"
                android:textColor="@color/bottomtab_normal"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:text="》"
                android:textColor="@color/bottomtab_normal"
                android:textSize="20dp" />


        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/tv_import_my_seed"
            android:textColor="@color/dark_gray"
            android:textSize="17dp" />
        <!--border lines for rows-->
        <View
            android:layout_height="0.5dip"
            android:layout_marginTop="10sp"
            android:background="@color/dark_gray" />

    </TableLayout>

