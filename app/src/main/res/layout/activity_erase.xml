<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/col_black">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:contentDescription="@string/img_logo1"
        android:src="@mipmap/logo1" />


    <TextView
        android:id="@+id/txtErase"
        style="@style/TextView_White_Bold_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/strErase" />


    <EditText
        android:id="@+id/editotp"
        style="@style/TextView_Black_18"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgLogo"
        android:layout_below="@+id/txtErase"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_format"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:padding="@dimen/editText_margin" />

    <Button
        android:id="@+id/btn_cancel"
        style="@style/TextView_Brown_16"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_reset"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/selector_button"
        android:text="@string/strCancel" />

    <Button
        android:id="@+id/btn_reset"
        style="@style/TextView_Brown_16"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_cancel"
        android:layout_marginBottom="45dp"
        android:background="@drawable/selector_button"
        android:text="@string/strReset" />

</RelativeLayout>
